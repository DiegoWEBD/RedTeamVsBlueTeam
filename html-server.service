[Unit]
Description=Servidor HTML
After=network.target

[Service]
WorkingDirectory=/home/serveradmin/html-server
ExecStart=/usr/bin/node /home/serveradmin/html-server/src/index.js
Restart=always
User=serveradmin
Group=serveradmin
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target

